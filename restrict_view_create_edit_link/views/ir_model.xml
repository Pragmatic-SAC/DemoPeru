<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pg_ir_model_restrict" model="ir.ui.view">
        <field name="name">ir.model.restrict.link</field>
        <field name="model">ir.model</field>
        <field name="inherit_id" ref="base.view_model_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="create_edit_page" string="Create/Edit Access"
                      groups="restrict_view_create_edit_link.group_create_edit_link">
                    <group>
                        <field name="access_links" nolabel='1'>
                            <tree editable="bottom">
                                <field name="model_id" invisible="1"/>
                                <field name="name" invisible="1"/>
                                <field name="user_id"
                                       options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                                <field name="hide_create" optional="show"/>
                                <field name="hide_edit" optional="show"/>
                                <field name="hide_unlink" optional="show"/>
                                <field name="hide_duplicate" optional="show"/>
                                <field name="hide_archived" optional="show"/>
                                <field name="hide_create_link" optional="show"/>
                                <field name="hide_edit_link" optional="show"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>