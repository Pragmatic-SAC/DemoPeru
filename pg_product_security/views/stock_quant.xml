<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pg_stock_quant_security" model="ir.ui.view">
        <field name="name">stock.quant.inherit.security</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <field name="quantity" position="after">
                <field name="can_edit_quantity" invisible="1"/>
            </field>
            <xpath expr="//field[@name='inventory_quantity']" position="attributes">
                <attribute name="attrs">{'readonly': [('can_edit_quantity', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>